{
    "description": "Required fields to create a City",
    "required": true,
    "content": {
        "application/json": {
            "schema": {
                "type": "object",
                "required": [
                    "cityName",
                    "cityCountryCD"
                ],
                "properties": {
                    "cityName": {
                        "description": "The name of the city",
                        "type": "string"
                    },
                    "cityCD": {
                        "description": "An optional code for the city",
                        "type": "string"
                    },
                    "cityCountryCD": {
                        "description": "The ISO code of the country where the city is located",
                        "type": "string"
                    }
                },
                "example": {
                    "cityName": "VALENCIA",
                    "cityCD": "",
                    "cityCountryCD": "ES"
                }
            }
        }
    }
}